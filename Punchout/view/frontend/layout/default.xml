<?xml version="1.0"?>

<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="middle-navigation.script">
            <arguments>
                <argument name="punchout_view_model" xsi:type="object">Tirehub\Punchout\ViewModel\Punchout</argument>
            </arguments>
        </referenceBlock>
        <referenceBlock name="navigation-account">
            <arguments>
                <argument name="punchout_view_model" xsi:type="object">Tirehub\Punchout\ViewModel\Punchout</argument>
            </arguments>
        </referenceBlock>
        <referenceContainer name="before.body.end">
            <block class="Magento\Framework\View\Element\Template"
                    name="punchout.section.refresh"
                    template="Tirehub_Punchout::section-refresh.phtml"
                    after="-">
                <arguments>
                    <argument name="punchout_view_model" xsi:type="object">Tirehub\Punchout\ViewModel\Punchout</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
