            <argument name="configProviders" xsi:type="array">
                <item name="punchout_config_provider" xsi:type="object">Tirehub\Punchout\Model\CheckoutConfigProvider</item>
            </argument>
        </arguments>
    </type>

    <type name="Magento\Checkout\Controller\Cart\Index">
