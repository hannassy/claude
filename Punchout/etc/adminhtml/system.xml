            <group id="customer" translate="label" type="text" sortOrder="200" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Customer Settings</label>
                <field id="email_template" translate="label comment" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Email Template</label>
                    <comment>Email template for punchout customers. Use shiptoID as placeholder (e.g., Punchout_shiptoID@tirehub.com)</comment>
                    <validate>required-entry</validate>
                </field>
<!--                <field id="default_first_name" translate="label comment" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">-->
<!--                    <label>Default First Name</label>-->
